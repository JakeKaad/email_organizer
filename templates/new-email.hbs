<form>
	<div class='form-group'>
		<label for="subject">Recipient</label>
		{{input value=recipient id="Recipient" class='form-control'}}
	</div>

	<div class='form-group'>
		<label for="sender">Sender</label>
		{{input value=sender id="Sender" class='form-control'}}
	</div>

	<div class='form-group'>
		<label for="subject">Subject</label>
		{{textarea  rows='10' value=subject id="Subject" class='form-control'}}
	</div>
	
	<a href='#' {{action 'sendEmail'}}><img  class='img-icon' src='img/send_email.png'></a>
</form>


